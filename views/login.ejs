<%- include('includes/head.ejs') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-0 col-sm-2 col-md-3 col-lg-4"></div>
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <p class="text-center mt-4 <%= messageColor%> bg-opacity-25 rounded"><%= message%></p>
            <div class="card mt-5">
                <div class="card-header text-center"><b>Login</b></div>
                <div class="card-body">
                    <form action="/" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark mb-3">Submit</button>
                            <p>Not registered yet? Click <a href="/register/details">here</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('includes/end.ejs') %>